<div style="display:flex; min-height:100vh; width:100%;">
  <div style="flex:1; background-image:url('<%= asset_path('img2.jpg') %>'); background-size:cover; background-position:center;"></div>
  <div style="flex:1; display:flex; align-items:center; justify-content:center; padding:32px;">
    <div class="auth-form-card" style="width:100%; max-width:420px;">
      <h2 class="auth-title" style="font-size:28px;">Create your NotesApp account</h2>
      <p class="auth-subtitle">Itâ€™s quick, secure, and free</p>

      <%= form_with model: resource, scope: resource_name, url: registration_path(resource_name), html: { class: "form-grid" } do |f| %>
        <p>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "input" %>
        </p>
        <p>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "input" %>
        </p>
        <p>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "input" %>
        </p>

        <div style="display:flex; justify-content:flex-end;">
          <%= f.submit "Sign Up", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div style="margin-top:20px; text-align:center;">
        <span class="muted" style="color:#64748b;">Already on NotesApp?</span>
        <%= link_to "Sign In", new_session_path(resource_name) %>
      </div>
    </div>
  </div>
</div>
